<p id="notice"><%= notice %></p>

<h1>Nodes</h1>

<table>
  <thead>
    <tr>
      <th>Ide</th>
      <th>Parent</th>
      <th>Gain</th>
      <th>Probability</th>
      <th>Expected value</th>
      <th>Route</th>
      <th>Children</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nodes.each do |node| %>
      <tr>
        <td><%= node.ide %></td>
        <td><%= node.parent %></td>
        <td><%= node.gain %></td>
        <td><%= node.probability %></td>
        <td><%= node.expected_Value %></td>
        <td><%= node.route.split(',').map { |s| s.to_i } %></td>
        <td><%= node.children.split(',').map { |s| s.to_i } %></td>
        <td><%= link_to 'Edit', edit_node_path(node) %></td>
        <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

